<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="application.css"/>
  </head>

  <body>
    <header>
      <div class="border-bottom border-dark">
        <nav class="navbar navbar-expand-lg navbar-light">
          <%= link_to root_path, class: 'navbar-nav mr-auto' do %>
            <%= image_tag 'cake_logo.jpg', size: '70x70' %>
          <% end %>
          <ul class="navbar-nav ml-auto">
             <% if admin_signed_in? %>
                <li class="nav-item mr-3">
                  <%= link_to admin_items_path, class: 'text-decoration-none text-dark' do %>
                      商品一覧
                  <% end %>
                </li>
                <li class="nav-item mr-3">
                  <%= link_to admin_customers_path, class: 'text-decoration-none text-dark' do %>
                      会員一覧
                  <% end %>
                </li>
                <li class="nav-item mr-3">
                  <%= link_to admin_root_path, class: 'text-decoration-none text-dark' do %>
                      注文履歴一覧
                  <% end %>
                </li>
                <li class="nav-item mr-3">
                  <%= link_to admin_genres_path, class: 'text-decoration-none text-dark' do %>
                      ジャンル一覧
                  <% end %>
                </li>
                <li class="nav-item mr-3">
                  <%= link_to destroy_admin_session_path, method: :delete, class: 'text-decoration-none text-dark' do %>
                       ログアウト
                  <% end %>
                </li>
             <% elsif customer_signed_in? %>
                <li class="nav-item">ようこそ、<%= current_customer.last_name %>さん！</li>
                <li class="nav-item mr-3">
                  <%= link_to customers_mypage_path, class: 'text-decoration-none text-dark' do %>
                        マイページ
                  <% end %>
                </li>
                <li class="nav-item mr-3">
                  <%= link_to items_path, class: 'text-decoration-none text-dark' do %>
                         商品一覧
                  <% end %>
                </li>
                <li class="nav-item mr-3">
                  <%= link_to cart_items_path, class: 'text-decoration-none text-dark' do %>
                         カート
                  <% end %>
                </li>
                <li class="nav-item mr-3">
                  <%= link_to destroy_customer_session_path, method: :delete, class: 'text-decoration-none text-dark' do %>
                         ログアウト
                  <% end %>
                </li>
             <% else %>
                <li class="nav-item mr-3">
                  <%= link_to about_path, class: 'text-decoration-none text-dark' do %>
                          About
                  <% end %>
                </li>
                <li class="nav-item mr-3">
                  <%= link_to items_path, class: 'text-decoration-none text-dark' do %>
                          商品一覧
                  <% end %>
                </li>
                <li class="nav-item mr-3">
                  <%= link_to new_customer_registration_path, class: 'text-decoration-none text-dark' do %>
                          新規登録
                  <% end %>
                </li>
                <li class="nav-item mr-3">
                  <%= link_to new_customer_session_path, class: 'text-decoration-none text-dark' do %>
                          ログイン
                  <% end %>
                </li>
             <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <main>
       <% if flash[:notice] %>
 　　  　　　<p id="notice">
        　 　 <%= flash[:notice] %>
          </p>
       <% else flash[:alert] %>
          <p id="alert">
             <%= flash[:alert] %>
          </p>
       <% end %>
       <%= yield %>
    </main>
    <footer>
      <div class="container">
        <div class="row no-gutters">
        </div>
      </div>
    </footer>
  </body>
</html>

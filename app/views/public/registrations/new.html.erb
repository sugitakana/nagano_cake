<div class="container">
   <div class="form-row">
     <h4 class="col-md-8 mx-auto mb-4">新規会員登録</h4>
     <div class="col-md-8 mx-auto">
       <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
         <%= render "public/shared/error_messages", resource: resource %>
          <div class="form-group row">
           <label for="inputname" class="col-sm-4 col-form-label">名前</label>
           <div class="col-md-8">
             (姓)　 <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
             (名)　 <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
           </div>
         </div>
         <div class="form-group row">
           <label for="inputkana" class="col-sm-4 col-form-label">フリガナ</label>
           <div class="col-md-8">
             (セイ) <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
             (メイ) <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
 　　　  　　　　 </div>
         </div>
         <div class="form-group row">
           <label for="inputemail" class="col-sm-4 col-form-label">メールアドレス</label>
           <div class="col-md-6 ml-5">
             <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
           </div>
         </div>
         <div class="form-group row">
           <label for="inputpostal_code" class="col-sm-4 col-form-label">郵便番号（ハイフンなし）</label>
           <div class="col-md-6 ml-5">
             <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
           </div>  
         </div>
         <div class="form-group row">
           <label for="inputaddress" class="col-sm-4 col-form-label">住所</label>
           <div class="col-md-6 ml-5">
             <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
           </div>
         </div>
         <div class="form-group row">
           <label for="inputtelephone_number" class="col-sm-4 col-form-label">電話番号（ハイフンなし）</label>
           <div class="col-md-6 ml-5">
             <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
           </div>
         </div>
         <div class="form-group row">
           <label for="inputpassword" class="col-sm-4 col-form-label">パスワード</label>
           <div class="col-md-6 ml-5">
             <%= f.password_field :password, autocomplete: "new-password" %>
           </div>
         </div>
         <div class="form-group row">
           <label for="inputpassword" class="col-sm-4 col-form-label">パスワード（確認用）</label>
           <div class="col-md-6 ml-5">
             <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
           </div>
         </div>
         <div class="text-center">
           <%= f.submit "新規登録", class: "btn btn-success w-25 ml-5" %>
         </div>
       <% end %>
       <h4>既に登録済みの方</h4>
       <%= link_to "こちら", new_customer_session_path %>からログインしてください。
     </div>
  </div>
</div>
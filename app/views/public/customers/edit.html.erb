<div class="container">
 <div class="row">
  <div class="col-md-8">
   <h4 class="mt-4">会員情報編集</h4>
  　　 <%= form_with model: @customer, url: customers_mypage_path do |f| %>
   　 　<div class="form-group row">
         <label for="inputname" class="col-sm-4 col-form-label">氏名</label>
         <div class="col-md-8">
           <%= f.text_field :last_name %>　　<%= f.text_field :first_name %>
         </div>
       </div>
       <div class="form-group row">
         <label for="inputkana" class="col-sm-4 col-form-label">フリガナ</label>
         <div class="col-md-8">
           <%= f.text_field :last_name_kana %>　　<%= f.text_field :first_name_kana %>
         </div>
       </div>
       <div class="form-group row">
         <label for="inputpostal_code" class="col-sm-4 col-form-label">郵便番号</label>
         <div class="col-md-8">
           <%= f.text_field :postal_code %>
         </div>
       </div>
       <div class="form-group row">
         <label for="inputaddress" class="col-sm-4 col-form-label">住所</label>
         <div class="col-md-8">
           <%= f.text_field :address, :size => "50*50" %>
         </div>
       </div>
       <div class="form-group row">
         <label for="inputtelephone_number" class="col-sm-4 col-form-label">電話番号</label>
         <div class="col-md-8">
           <%= f.text_field :telephone_number %>
         </div>
       </div>
       <div class="form-group row">
         <label for="inputemail" class="col-sm-4 col-form-label">メールアドレス</label>
         <div class="col-md-8">
           <%= f.text_field :email %>
         </div>
       </div>
       <div class="form-group text-center ml-5">
         <span class="ml-5">
           <%= f.submit "編集内容を保存", class: "btn btn-success col-md-3" %>
           <% end %>
         </span>
         <span class="ml-5">
          <%= link_to confirm_withdraw_path, class: "btn btn-danger" do %>
            退会する
          <% end %>
         </span>
       </div>
  </div>
 </div>
</div>
     
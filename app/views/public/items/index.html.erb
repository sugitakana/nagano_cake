<table>
  <tr>
    <th>ジャンル検索</th>
  </tr>
  <tr>
    <% @genres.each do |genre| %>
      <td><%#= link_to genre.name, genre_path(genre.id) %></td>
    <% end %>
  </tr>
</table>

<h3>商品一覧</h3>
<%= @items.each do |item| %>
  <%= link_to item_path(item.id), do %>
    <%= image_tag item.get_image %>
    <%= item.name %>
    ¥<%= item.with_tax_price.to_s(:delimited) %>
   <% end %>
<% end %>
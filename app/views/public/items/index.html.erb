<div class="container">
  <div class="row mt-5">
    <div class="col-md-2 mr-3">
      <table class="table table-bordered">
        <tr>
          <th>ジャンル検索</th>
        </tr>
        <% @genres.each do |genre| %>
         <tr>
           <td><%= link_to genre_path(genre.id), class: "text-decoration-none text-dark" do %>
                 <%= genre.name %>
               <% end %>
           </td>
         </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-9">
      <h4 class="mb-4">商品一覧(全<%= @items.count %>件)</h4>
        <% @items.each do |item| %>
          <%= link_to item_path(item.id), class: "text-decoration-none text-dark" do %>
            <%= image_tag item.get_image(200, 200) %><br>
            <%= item.name %><br>
            ¥<%= item.with_tax_price.to_s(:delimited) %>
          <% end %>
        <% end %>
        <%= paginate @items %>
    </div>
  </div>
</div>
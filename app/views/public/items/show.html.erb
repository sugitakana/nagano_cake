<div class="container">
  <div class="row">
    <div class="col-md-2 mr-3">
      <table class="table table-bordered">
        <tr>
          <th>ジャンル検索</th>
        </tr>
        <% @genres.each do |genre| %>
         <tr>
           <td><%= link_to genre_path(genre.id), class: "text-decoration-none text-dark" do %>
                 <%= genre.name %>
               <% end %>
           </td>
         </tr>
        <% end %>
      </table>
    </div>
    <div class="col-md-4">
      <%= image_tag @item.get_image(300, 300) %>
    </div>
    <div class="col-md-5">
      <h3 class="font-weight-bold"><%= @item.name %></h3>
      <p><%= @item.introduction %></p>
      <p><% if @item.is_active == true %>
           <%= "販売中" %>
         <% else %>
           <%= "売り切れ" %>
         <% end %></p>
      <p>¥<%= @item.with_tax_price.to_s(:delimited) %>（税込） </p>
      <% if @item.is_active == true %>
        <%= form_with model: @cart_item, url: cart_items_path, method: :post, local: true do |f| %>
          <%= f.select :amount, *[1..10], { include_blank: "個数選択"} %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <div class="mt-4">
           <%= f.submit "カートに入れる", class: "btn btn-success" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
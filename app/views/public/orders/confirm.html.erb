<h3>注文情報確認</h3>
<table>
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
        </tr>
    </thead>
    <tbody>
        <% total_price = 0 %>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.itam.get_image(5,10) %>
                <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal.to_s(:delimited) %>
                <% total_price +=  cart_item.subtotal %>
            </td>
          </tr>
        <% end %>
    </tbody>
</table>

<table>
    <tr>
        <th>送料</th>
        <td><% @order.shipping_fee = 800 %>
            <%= @order.shipping_fee %>
        </td>
    </tr>
    <tr>
        <th>商品合計</th>
        <td><%= total_price.to_s(:delimited) %></td>
    </tr>
    <tr>
        <th>請求金額</th>
        <td><% @order.amount_billed = total_price + @order.shipping_fee %>
            <%= @order.amount_billed.to_s(:delimited) %>
        </td>
    </tr>
</table>

<table>
    <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
        <th>お届け先</th>
        <td><%= @order.postal_code %>
            <%= @order.address %>
            <%= @order.name %>
        </td>
    </tr>
</table>

<%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :customer_id %>
  <%= f.hidden_field :shipping_fee %>
  <%= f.hidden_field :amount_billed %>
  <%= f.hidden_field :payment_method_i18n %>
  <%= f.hidden_field :postal_code %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :status %>
  <%= f.submit "注文を確定する" %>
<% end %>
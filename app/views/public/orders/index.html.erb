<div class="container">
  <div class="row">
    <div class="col-md-12">
     <h4 class="mt-4 mb-5">注文履歴一覧</h4>
     <table class="table table table-bordered">
       <thead class="table-secondary">
        <tr>
         <th>注文日</th>
         <th>配送先</th>
         <th>注文商品</th>
         <th>支払金額</th>
         <th>ステータス</th>
         <th>注文詳細</th>
        </tr>
       </thead>
       <tbody class="table-sm">
        <% @orders.each do |order| %>
          <tr>
            <td class=align-middle><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>〒<%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %>
            </td>
            <td><% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
                <% end %>
            </td>
            <td class="align-middle"><%= order.amount_billed.to_s(:delimited) %></td>
            <td class="align-middle"><%= order.status_i18n %></td>
            <td class="align-middle"><%= link_to order_path(order.id), class: "btn btn-primary" do %>
                                       表示する
                                     <% end %>
            </td>
          </tr>
        <% end %>
       </tbody>
     </table>
    </div>
  </div>
</div>
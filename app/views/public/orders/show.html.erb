<h3>注文履歴詳細</h3>
<p>注文情報</p>
<table>
    <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
        <th>配送先</th>
        <td><%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
        </td>
    </tr>
    <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
        <th>ステータス</th>
        <td><%= @order.status %></td>
    </tr>
</table>

<p>請求金額</p>
<table>
    <tr>
        <th>商品合計</th>
        <td><%= (@order.amount_billed - @order.shipping_fee).to_s(:delimited) %></td>
    </tr>
    <tr>
        <th>配送料</th>
        <td><%= @order.shipping_fee %></td>
    </tr>
    <tr>
        <th>ご請求額</th>
        <td><%= @order.amount_billed.to_s(:delimited) %></td>
    </tr>
</table>

<p>注文内容</p>
<table>
    <thead>
        <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th> 
            <th>小計</th>
        </tr>
    </thead>
    <tbody>
        <% @oredr_details.each do |order_detail| %>
          <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.price.to_s(:delimited) %></td>
              <td><%= oredr_detail.quantity %></td>
              <td><%= order_detail.subtotal.to_s(:delimited) %></td>
          </tr>
        <% end %>
    </tbody>
</table>
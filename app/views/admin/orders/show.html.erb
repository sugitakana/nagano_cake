<h2>注文履歴詳細</h2>

<table>
  <tr>
    <th>購入者</th>
    <td><%= link_to admin_customer_path(@order.customer) do %>
           <%= @order.customer.last_name %><%= @order.customer.first_name %>
        <% end %>
    </td>
  </tr>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td><%= @order.postal_code %>
        <%= @order.address %>
        <%= @order.name %>
    </td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method %></td>
  </tr>
  <tr>
    <th>注文ステータス</th>
    <td><%= form_with model: @order, url: admin_order_path(@order) do |f| %>
           <%= f.select :status, Order.statuses.kyes %>
           <%= f.submit "更新" %>
        <% end %>
    </td>
  </tr>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do|order_detail| %>
     <tr>
       <td><%= order_detail.item.name %></td>
       <td><%= order_detail.price.to_s(:delimited) %></td>
       <td><%= order_detail.quantity %></td>
       <td><%= order_detail.subtotal.to_s(:delimited) %>
       　   <% @total_price = order_detail.subtotal %>
        </td>
       <td><%= form_with model: order_detail, url: admin_order_detail(order_detail) do |f| %>
               <%= f.select :production_status, OrderDetail.production_status.kyes %>
               <%= f.submit "更新" %>
            <% end %>
        </td>
     </tr>
    <% end %>
  </tbody>
</table>

<table>
  <tr>
    <th>商品合計</th>
    <td><%= @total_price.to_s(:delimited) %></td>
  </tr>
  <tr>
    <th>送料</th>
    <td><%= @order.shipping_fee.to_s(:delimited) %></td>
  </tr>
  <tr>
    <th>請求金額合計</th>
    <td><% @order.amount_billed = @total_price + @order.shipping_fee %>
        <%= @order.amount_billed.to_s(:delimited) %>
    </td>
  </tr>
</table>
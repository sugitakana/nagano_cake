<div class="container">
  <div class="row">
    <div class="col-md-8 mt-4">
      <h4 class="mb-5 ml-4">ジャンル一覧・追加</h4>
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <%= f.label :name, "ジャンル名" %>
        　　　　<%= f.text_field :name, placeholder: "ジャンル名" %>
        　　　　<%=f.submit '新規登録', class: "btn btn-success" %>      
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 mt-5">
      <table class="table">
        <thead class="table-secondary">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to edit_admin_genre_path(genre.id), class: "btn btn-success" do %>
                    編集する
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<h2>商品編集</h2>
<%= form_with model: @item, url: admin_item_path do |f| %>
  <p>商品画像 <%= f.file_field :image, accept: "image/*" %></p>
 
  <p>商品名 <%= f.text_field :name %></p>
  
  <p>商品説明 <%= f.text_area :introduction %></p>
 
  <p>ジャンル <%= f.collection_select :genre_id, Genre.all, :id, :name,{prompt: @item.genre_id} %></p>
  
  <p>税抜価格 %> <%= f,text_field :price %>円</p>
  
  <div>販売ステータス <%= f.radio_button :is_active, true %>
                      <%= f.label :is_active, "販売中" %>
                      <%= f.radio_button :is_active, false %>
                      <%= f.label :is_active, "販売停止中" %>
  </div>
  <div>
    <%= f.submit "変更を保存" %>
  </div>
  
<% end %>
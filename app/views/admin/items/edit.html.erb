<h2>商品編集</h2>
<%= form_with model:@item do |f| %>
  <%= f.label:商品画像 %> 
  <%= f.file_field :image, accept: "image/*" %>
 
  <%= f.label:商品名 %>
  <%= f.text_field :name %>
  
  <%= f.label:商品説明 %>
  <%= f.text_area :introduction, id:"inputIntroduction" %>
 
  <%= f.label:ジャンル %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name,{prompt: @item.genre_id} %>
  
  <%= f.label:税抜価格 %>
  <%= f,text_field :price %>
  
  <%= f.label:販売ステータス %>
  <%= f.select :is_active, [["販売中",true],["販売停止中",false]] %> 
  
  <div>
    <%= f.submit "変更を保存" %>
  </div>
  
<% end %>
<div class="container">
  <div class="row">
    <h4>商品一覧</h4>
     <div class="col-12 clearfix mb-3">
      <%= link_to new_admin_item_path, class: "float-right text-decoration-none text-dark" do %>
         ＋
      <% end %>
     </div>

    <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item_id %></td>
            <td><%= link_to admin_item_path(item_id) do %>
                 <%= item.name %>
                <% end %>
            </td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td><% if item.is_active == true %>
                   <%= "販売中" %>
                <% else %>
                   <%= "販売停止中" %>
                <% end %>
            </td>
          <tr>
       <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
  </div>
</div>
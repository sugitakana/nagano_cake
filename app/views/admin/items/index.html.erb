<div class="container">
  <div class="row">
    <h4 class="mt-4">商品一覧</h4>
     <div class="col-12 mb-3">
      <%= link_to new_admin_item_path, class: "float-right text-decoration-none text-dark" do %>
         ＋
      <% end %>
     </div>

    <table class="table">
      <thead class="table-secondary">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to admin_item_path(item.id), class: "text-dark" do %>
                 <%= item.name %>
                <% end %>
            </td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td class="font-weight-bold"><% if item.is_active == true %>
                   <p class="text-success"><%= "販売中" %></p>
                <% else %>
                   <p class="text-secondary"><%= "販売停止中" %></p>
                <% end %>
            </td>
          <tr>
       <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
  </div>
</div>
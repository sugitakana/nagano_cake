<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto mb-5">
      <h4 class="mt-4">会員一覧</h4>
       <table class="table mt-4">
        <thead class="table-secondary">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to admin_customer_path(customer.id), class: "text-dark" do %>
                    <%= customer.last_name + customer.first_name %>
                  <% end %>
              </td>
              <td><%= customer.email %></td>
              <td class="font-weight-bold"><% if customer.is_deleted == false %>
                    <p class="text-success"><%= "有効" %></p>
                  <% else %>
                    <p class="text-secondary"><%= "退会" %></p>
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
       </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>